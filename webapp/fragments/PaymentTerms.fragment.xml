<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		contentWidth="40%"
		title="Add New Payment Terms"
	>
		<content>
			<f:SimpleForm
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="4"
				adjustLabelSpan="true"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				singleContainerFullSize="true">
				<f:content>
					<core:Title text=""/>
					<Label text="Customer Type" required="true"/>
					<Select enabled="false" items="{path: 'PayTermsModel>/',templateShareable: true}">
                        <core:Item key="{PayTermsModel>customertype}" text="{PayTermsModel>customertype}" />
                    </Select>
					<Label text="Credit Type" required="true"/>
					<Select enabled="false" items="{path: 'PayTermsModel>/',templateShareable: true}">
                        <core:Item key="{PayTermsModel>credittype}" text="{PayTermsModel>credittype}" />
                    </Select>
					<Label text="Payment Term" required="true"/>
					<Input value="{/paymentterm}" editable="false" maxLength="40"/>
                    <Label text="Is CAD"/>
					 <RadioButtonGroup columns="3" selectedIndex="{=${/iscad} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
                    <Label text="Till Sb"/>
					<RadioButtonGroup columns="3" selectedIndex="{=${/tillsb} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
					<Label text="Is Active"/>
					<RadioButtonGroup columns="3" selectedIndex="{=${/isactive} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="OK"
				press="onPayTermCreate"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onPayTermCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>