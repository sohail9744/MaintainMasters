<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		contentWidth="40%"
		title="Add New Violation"
	>
		<content>
			<f:SimpleForm
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="4"
				adjustLabelSpan="true"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				singleContainerFullSize="true">
				<f:content>
					<core:Title text=""/>
					<Label text="Business Unit Name" required="true"/>
					<Input value="{/businessunitname}"/>
					<Label text="Vertical Name" required="true"/>
					<Input value="{/verticalname}"/>
					<Label text="Violation Type Name" required="true"/>
					<Input value="{/violationtypename}"/>
					<Label text="Role Name"/>
					<Input value="{/rolename}"/>
					<Label text="Is Active"/>
					 <RadioButtonGroup columns="3" selectedIndex="{=${/isactive} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="OK"
				press="onViolationCreate"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onViolationCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>