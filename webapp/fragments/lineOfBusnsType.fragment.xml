<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		contentWidth="40%"
		title="Add New Line of Business Type"
	>
		<content>
			<f:SimpleForm
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="4"
				adjustLabelSpan="true"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				singleContainerFullSize="true">
				<f:content>
					<core:Title text=""/>
					<Label text="Channel Group" required="true"/>
					<Select enabled="false" items="{path: 'CGModel>/',templateShareable: true}">
                        <core:Item key="{CGModel>channelgroup}" text="{CGModel>channelgroup}" />
                    </Select>
					<Label text="Channel" required="true"/>
					<Select enabled="false" items="{path: 'ChannelModel>/',templateShareable: true}">
                        <core:Item key="{ChannelModel>channel}" text="{ChannelModel>channel}" />
                    </Select>
					<Label text="Sub Channel" required="true"/>
					<Select enabled="false" items="{path: 'subChannelModel>/',templateShareable: true}">
                        <core:Item key="{subChannelModel>subchannel}" text="{subChannelModel>subchannel}" />
                    </Select>
					<Label text="Line Of Business Type" required="true"/>
					<Input value="{/lineofbusinesstype}" editable="false" maxLength="40"/>
					<Label text="Is Active"/>
					 <RadioButtonGroup columns="3" selectedIndex="{=${/isactive} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="OK"
				press="onLOBTCreate"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onLOBTCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>