<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		contentWidth="40%"
		title="Add New Delegation Trading"
	>
		<content>
			<f:SimpleForm
				layout="ResponsiveGridLayout"
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="4"
				labelSpanS="4"
				adjustLabelSpan="true"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				singleContainerFullSize="true">
				<f:content>
					<core:Title text=""/>
					<Label text="Customer Type" required="true"/>
					<Input value="{/customertype}" editable="false"/>
                    <Label text="Credit Limit Type" required="true"/>
					<Input type="Number" value="{/creditlimittype}" editable="false"/>
					<Label text="Class Type" required="true"/>
					<Input value="{/classtype}" editable="false"/>
                    <Label text="Business Unit" required="true"/>
					<Input value="{/businessunit}" editable="false"/>
					<Label text="Vertical" required="true"/>
					<Input value="{/vertical}" editable="false"/>
                    <Label text="Segment" required="true"/>
					<Input value="{/segment}" editable="false"/>
                    <Label text="Minimum Quantity Limit" required="true"/>
					<Input type="Number" value="{/minimumquantitylimit}" editable="false"/>
                    <core:Title text=""/>
					<Label text="Maximum Quantity Limit" required="true"/>
					<Input type="Number" value="{/maximumquantitylimit}" editable="false"/>
					<Label text="Minimum Value Limit" required="true"/>
					<Input type="Number" value="{/minimumvaluelimit}" editable="false"/>
                    <Label text="Maximum Value Limit" required="true"/>
					<Input type="Number" value="{/maximumvaluelimit}" editable="false"/>
					<Label text="Last Selected Role" required="true"/>
					<Input value="{/lastselectedrole}" editable="false"/>
                    <Label text="Role Type"/>
					<Input value="{/roletype}"/>
					<Label text="Informative Role"/>
					<Input value="{/informativerole}"/>
					<Label text="Is CAD"/>
					 <RadioButtonGroup columns="3" selectedIndex="{=${/iscad} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
					<Label text="Is Active"/>
					 <RadioButtonGroup columns="3" selectedIndex="{=${/isactive} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="OK"
				press="onDelegationTRCreate"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onDelegationTRCancel"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>