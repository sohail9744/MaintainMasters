<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog contentWidth="40%" title="Add New Bank Master">
        <content>
        <!-- sf -->
            <f:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="true">
                <f:content>
                    <core:Title text="" />
                    <Label text="Bank" required="true"/>
                    <Input value="{/bank}" editable="false"/>
                    <Label text="Country" />
                    <Input value="{/country}" />
                    <Label text="Is Active" />
                    <RadioButtonGroup columns="3" selectedIndex="{=${/isactive} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
                    <Label text="Is Bank With Condition" />
                    <RadioButtonGroup columns="3" selectedIndex="{=${/isbank_with_condition} === 'Yes' ? 0 : 1}" width="100%">
                        <RadioButton text="Yes" />
                        <RadioButton text="No" />
                    </RadioButtonGroup>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="OK" press="onBankCreate"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onBankCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
